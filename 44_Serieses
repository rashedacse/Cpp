//1+3+5+......+n=?
#include<iostream>
#include<math.h>
using namespace std;
int main()
{ int i,n,sum=0;
  cout<<"Enetr num of elements: "; cin>>n;
  for(i=1;i<=n;i=i+2)
  sum=sum+i; cout<<"Thr sumetion = "<<sum;
}
