/*/ * C Program to Find find Sum of the Series 1/1! + 2/2! + 3/3! + ……1/N!
#include <stdio.h>
#include <iostream>
using namespace std;
double sumseries(double);
int	main()
    {   double n,value;
	    cout<<"\n Enter the value:  "; cin>>n;
	    value = sumseries(n);
	    cout<<"\n Sum of the above series =  "<<value;
	}
double sumseries(double n)
	{
	    double sum = 0, f = 1, i;
	    for (i = 1; i <= n; i++)
	    {   f = f * i;
	        sum = sum +(i / f);
        }
	    return(sum);
    }*/



