#include<iostream>
using namespace std;
int main()
{  int i,j,n;
    cout<<"Enter num of rows: "; cin>>n;
    for(i=0;i<=n;i++)
    {
        for(j=0;j<=i;j++)
        {  cout<<"*";
        }
        cout<<"\n";
    }
}
 /*/half digit pyramid.
 #include<iostream>
