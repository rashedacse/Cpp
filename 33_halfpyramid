//half pyramid alphabet.
#include <iostream>
using namespace std;
int main()
{
    char n,alphabet = 'A';
    cout << "Enter the uppercase character you want to print in the last row: ";
    cin >>n;
    for(int i = 1; i <= (n-'A'+1); ++i)
    {
        for(int j = 1; j <= i; ++j)
        {   cout << alphabet << " ";
        }
       ++alphabet;
        cout <<"\n";
    }
}
