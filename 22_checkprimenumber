// Check prime number.
#include<iostream>
using namespace std;
int main()
{
    int n,i,isprime=1;
    cout<<"Enter num:\n";
    cin>>n;
    for(i=2;i<n;i++)
    {

    if(n%i==0)
     {
        isprime=0;
        break;
     }
    }
    if(isprime==1)
     {
        cout<<n<<" is a prime number.\n";
     }
    else
     {
        cout<<n<<" is not a prime number.\n";
     }
}
//C Program to find whether a Number is Prime or Not using Recursion
#include<conio.h>
#include<string.h>
#include<iostream>
using namespace std;
#include <stdio.h>
int primeno(int , int );
int main()
{   int n, check,isprime;
   cout<<"Enter num:\n"; cin>>n;
    isprime = primeno(n, n / 2);
    if(isprime==1)
     {  cout<<" is  a prime number.\n";}
    else
     { cout<<" is not a prime number.\n";}
    return 0;
}
int primeno(int n, int i)
{
    if (i == 1 || n==1)
    {   return 1;}

    else  if (n % i == 0)
       {    return 0;}
    else { return  primeno(n, i - 1);}

}
//Find prime num serires&count using recursion.
#include<iostream>
using namespace std;
int primeno(int,int);
int main()
{   int isprim,min,max,n,i,count=0;

   cout<<"Enter min num: "; cin>>min; cout<<"Enter max num: "; cin>>max;
   for(i=min;i<=max;i++)
   {    isprim=1;
       {isprim=primeno(i,i/2);
            if(isprim==1){cout<<i<<" "; count++; }  }
   }
    cout<<"TOtal num: "<<count;
}
int primeno(int n,int e)
{
    if(e==1 ||(n==1)) {return 1;}
    else if(n%e==0){return 0; }
    else {return primeno(n,e-1);}
}
