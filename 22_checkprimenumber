// Check prime number.
#include<iostream>
using namespace std;
int main()
{
    int n,i,isprime=1;
    cout<<"Enter num:\n";
    cin>>n;
    for(i=2;i<n;i++)
    {

    if(n%i==0)
     {
        isprime=0;
        break;
     }
    }
    if(isprime==1)
     {
        cout<<n<<" is a prime number.\n";
     }
    else
     {
        cout<<n<<" is not a prime number.\n";
     }
}
//Write a C++ program to find prime number & also find location,search element.
#include<iostream>
using namespace std;
int main()
{   int i,j,min,max,a[50],isprime, count=0;
    cout<<"Enter min. number:\n";cin>>min;
    cout<<"Enter max number:\n";cin>>max;

    for(i=min;i<=max;i++){
        isprime=1;
        for(j=2;j<i;j++){
            if(i%j==0) {
                    isprime=0;break;
            }
        }
        if(isprime==1 && count<7){
            cout<<i<<" ";
            count++;
        }
    }
}

