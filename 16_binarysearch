//binary search


#include<iostream>
using namespace std;
int main()
{
    int i,n,first,last,mid,search;
     float a[50];
     cout<<"Enter num. of element";
     cin>>n;
     cout<<"Enter "<<n<<" elements:\n";
     for(i=0;i<n;i++)
     {
         cin>>a[i];
     }
     cout<<"Enter element that u want to find:\n";
     cin>>search;
     last=n-1;mid=(first+last)/2;
     while(first<=last)
     {
         if(a[mid]<search)
         {
             first=mid+1;
         }

         else if(a[mid]==search)
         {
             cout<<"Found at location"<<mid+1<<"\n";
             break;
         }
         else
         {
             last=mid-1;
         }
         mid=(first+last)/2;

     }
     if(first>last)
     {
         cout<<"not found!";
     }
}
