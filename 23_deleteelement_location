//delete an element from an arrey usin location.

#include<iostream>
using namespace std;
int main()
{
    int n,i,location,a[100];
    cout<<"Enter num. of element:\n";
    cin>>n;
    cout<<"The element are:\n";
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Enter location that u want to delete:\n";
    cin>>location;
    if(location>=n+1)
    { cout<<"sorry!not possible.";
    }
    else
    {
        for(i=location-1;i<n-1;i++)
        {
            a[i]=a[i+1];
        }
        cout<<"Resultant array:\n";
        for(i=0;i<n-1;i++)
           {
             cout<<"\n"<<a[i]<<"\n";
           }
    }

}
