//Finding GCD and LCM of Given Numbers using C++
#include <stdio.h>
#include <iostream>
using namespace std;
int	main()
{
    int l,s,r,p,q,a,b;
    cout<<"Largest element: "; cin>>l;
    cout<<"Smallest element: "; cin>>s;
    a=l; b=s;
    while(s!=0)
    {   r=l%s;
        l=s;
        s=r;
    }
    cout<<"\nThe gcd is: "<<l;
    cout<<"\nThe lcd is: "<<a*b/l;
}
