

//bubble sort


#include<iostream>
using namespace std;
int main()
{

    int a[30],i,j,n,temp;
    cout<<"Enter num. of elements:";
    cin>>n;

    for(i=0;i<n;i++)
    {
        cin>>a[i];

    }
    for(i=1;i<=n;i++)
    {
        for(j=0;j<(n-i);j++)
        {
        if(a[j]>a[j+1])
        {
        temp=a[j];
        a[j]=a[j+1];
        a[j+1]=temp;
        }
        }
    }
    cout<<"\nAfter sorting:\n";
    for(i=0;i<n;i++)
    {
        cout<<"\n"<<a[i]<<"\n";
    }
    // cout<<"Ascending order:";
   // for(i=0;i<n;i++)
   // {
   //     cout<<a[i];

    //}
    cout<<"Decending order:";
    for(i=n-1;i>=0;i--)
    {
        cout<<"\n"<<a[i];
    }


}
