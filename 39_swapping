//swap 2 numbers using pointers in C
#include<stdio.h>
#include<conio.h>
#include<iostream>
using namespace std;
int main()
{
    int x,y,*a,*b,temp;
    cout<<"Enter two numbers:"; cin>>x>>y;
    a=&x; b=&y;
    temp=*a;
    *a=*b;
    *b=temp;
    cout<<"Afrer swapping: "<<x<<" and "<<y;
}
