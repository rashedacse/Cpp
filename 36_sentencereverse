//Sentence reverse.
#include<iostream>
#include <stdio.h>
#include <string.h>
using namespace std;
int main()
{
 char a[100];
 int i,j;
 cout<<"Enter the Text:"; gets(a); strrev(a);
 for(i=0;a[i]!='\0';i++)
{
    if(a[i+1]==' ' || a[i+1]==0)
    {
       for(j=i;j>=0 && a[j]!=' ';j--)
      cout<<a[j];
    }
      cout<<" ";
}
}
//using recursion.
#include<iostream>
using namespace std;
void reverse(char *str)
{   if (*str)
   {    reverse(str+1);
        cout<<*str;
    }
}
int main()
{
char a[] = "Geeks for Geeks";
reverse(a);
return 0;
}

