//Take PassWord From the user and Show:
#include<stdio.h>
#include<iostream>
#include<string.h>
#include<conio.h>
#define ENTER 13
using namespace std;
int main()
{
  int i;
  char pass[100],ch;
  cout<<"Take PassWord: ";
  for(i=0;(ch=getch())!=ENTER;i++)
  {
      pass[i]= ch;
      printf("*");
  }
  pass[i]='\0';
 cout<<"\n\n The PassWord is: "<<pass;
return 0;
}
