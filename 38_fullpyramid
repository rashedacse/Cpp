//full digit pyramid.
#include<iostream>
#include<stdio.h>
#include<conio.h>
using namespace std;
int main()
{
int i,j,n;
cout<<"Enter numb er of rows: "; cin>>n;
for(i=1;i<=n;i++) //for(i=10;i>=1;i--)[Reverse order]
{
 for(j=1;j<=n-i;j++) cout<<" ";
 for(j=1;j<=i;j++) cout<<j<<"  ";
cout<<"\n";
}
}




